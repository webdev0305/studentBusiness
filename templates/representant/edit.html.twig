{% extends 'base.html.twig' %}

{% block title %}Edit Representant{% endblock %}

{% block body %}

    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}


    <div class="row m-0 mt-3">


        <div class="col-8 mt-5">

            <div class="card shadow ">

                <div class="card-body">
                    <div class="contenedor bg-white">

                        <div class="row m-0">

                            <div class="col-12 ">
                                <small class="small-text">Formulari d'edició de representants</small>
                            </div>
                        </div>

                        <div class="row m-0 ">
                            <div class="col-12 mt-2">

                                <h6>Informació bàsica del representant</h6>
                                <hr>
                                <div class="form-group row m-0  mb-3">


                                    <div class="col-sm-2 col-form-label bg-secondary text-white rounded-start">{{ form_label(form.nom,null, {errors: []}) }}</div>
                                    <div class="col-10 p-0">
                                        <div class="input-group">

                                            {{ form_widget(form.nom) }}
                                            {#<input type="text"  class="form-control shadow-none" id="nom" value="" placeholder="Nom">#}

                                        </div>
                                    </div>
                                    {{ form_errors(form.nom) }}
                                </div>


                                <div class="form-group row m-0  mb-3">


                                    <div class="col-sm-2 col-form-label bg-secondary text-white rounded-start">{{ form_label(form.cognom,null, {errors: []}) }}</div>
                                    <div class="col-10 p-0">
                                        <div class="input-group">

                                            {{ form_widget(form.cognom) }}
                                            {#<input type="text"  class="form-control shadow-none" id="nom" value="" placeholder="Nom">#}

                                        </div>
                                    </div>
                                    {{ form_errors(form.cognom) }}
                                </div>
                                <div class="form-group row m-0  mb-3">

                                    <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="">{{ form_label(form.empresa,null, {errors: []}) }}</label>
                                    <div class="col-10 p-0">

                                        {{ form_widget(form.empresa) }}

                                    </div>
                                    {{ form_errors(form.empresa) }}
                                </div>
                                <div class="form-group row m-0  mb-3">

                                    <div class="col-sm-2 col-form-label bg-secondary text-white rounded-start">{{ form_label(form.poblacio,null, {errors: []}) }}</div>
                                    <div class="col-10 p-0">
                                        <div class="input-group">

                                            {{ form_widget(form.poblacio) }}
                                            {#<input type="text"  class="form-control shadow-none" id="poblacio" value="" placeholder="Valencia">#}

                                        </div>
                                    </div>
                                    {{ form_errors(form.poblacio) }}
                                </div>
                                <h6 class="mt-5">Informació de contacte</h6>
                                <hr>
                                <div class="form-group row m-0  mb-3">


                                    <div class="col-sm-2 col-form-label bg-secondary text-white rounded-start">{{ form_label(form.mail,null, {errors: []}) }}</div>
                                    <div class="col-10 p-0">
                                        <div class="input-group">

                                            {{ form_widget(form.mail) }}
                                            {#<input type="text"  class="form-control shadow-none" id="mail" value="" placeholder="example@gmail.com">#}

                                        </div>
                                    </div>
                                    {{ form_errors(form.mail) }}
                                </div>
                                <div class="form-group row m-0 mt-4 mb-3">

                                    <div class="col-sm-2 col-form-label bg-secondary text-white rounded-start">{{ form_label(form.telefon,null, {errors: []}) }}</div>
                                    <div class="col-10 p-0">
                                        <div class="input-group">

                                            {{ form_widget(form.telefon) }}
                                            {# <input type="text"  class="form-control shadow-none" id="tel" value="" placeholder="000000000">#}

                                        </div>
                                    </div>
                                    {{ form_errors(form.telefon) }}
                                </div>

                                <!-- <button type="submit" class="btn btn-primary">Submit</button> -->

                            </div>
                        </div>
                    </div>
                </div><!--fi card-body1-->

            </div>


        </div><!--fi columna principal-->

        <div class="col-4"></div>





    </div>

    <div class="row m-0">
        <div class="col-4 mt-2 ">

            <div class="card shadow h-100 containerBlue ">

                <button class="common-link color-heavyBlue btn w-100" type="submit" >
                    <div class="card-body">
                        <div class="contenedor">

                            <div class="h-100">

                                <div class="d-flex justify-content-center align-items-center"><i class="fa fa-check" aria-hidden="true"></i>
                                    &ensp; Validar les dades &ensp; </div>

                            </div>
                        </div>

                    </div><!--fi card-body1-->
                </button>
            </div>
        </div>
        <div class="col-4 mt-2  ">
            <div class="card shadow h-100 containerBlue">
                <button class="common-link color-heavyBlue btn w-100" type="submit" >
                    <div class="card-body">
                        <div class="contenedor">

                            <div class="h-100">

                                <div class="d-flex justify-content-center align-items-center"><i class="fa fa-pencil" aria-hidden="true"></i>
                                    &ensp; Editar &ensp; </div>

                            </div>
                        </div>

                    </div><!--fi card-body1-->
                </button>
            </div>
        </div>

    </div>



    {{ form_end(form) }}



{% endblock %}
