{% extends 'base.html.twig' %}

{% block title %}Inici Sessió{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-3"></div>
        <div class="col-6 mt-5">
            <div class="card shadow ">
                <div class="card-body">
                    <div class="contenedor bg-white p-3">
                        <div class="row">
                            <div class="col-9">
                                <h5 class="">Inici de sessió</h5>

                                <hr class="w-100 mb-3">

                            </div>
                            <div class="col-3"></div>
                        </div>
                        <form method="post" novalidate>
                            <div class="row">
                                <div class="col-12">

                                        {% if error %}
                                            <div class="alert alert-danger" role="alert">
                                                {{ error.messageKey }}
                                            </div>
                                        {% endif %}
                                        <div class="form-group row m-0 mt-4 mb-3">

                                            <label class="col-sm-2 col-form-label bg-turqNoEmbed text-center text-white rounded-start" for="_username">
                                                <i class="fas fa-user-edit"></i>
                                            </label>
                                            <div class="col-10 p-0">
                                                <div class="input-group">

                                                    <input placeholder="Usuari" type="text" class="form-control shadow-none" id="username" name="_username" value="{{ lastUserName }}">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row m-0 mt-4 mb-3">

                                            <label class="col-sm-2 col-form-label bg-turqNoEmbed text-center text-white rounded-start" for="_password">
                                                <i class="fas fa-key"></i>
                                            </label>
                                            <div class="col-10 p-0">
                                                <div class="input-group">

                                                    <input placeholder="Contrassenya" type="password" class="form-control shadow-none" id="password" name="_password" value="">

                                                </div>
                                            </div>
                                        </div>


                                </div>

                            </div>
                            <div class="row mb-2">
                                <div class="col-12">
                                    <small><b> Has oblidat la teua contrassenya? <a class="text-danger" href="#">Recupera-la aci</a></b></small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col6"></div>
                                <div class="col6"><small>No tens un compte?</small></div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-6">
                                    <a href="{{ path('professor_registre') }}" class="btn bg-turq text-white w-100">Registra't</a>

                                </div>
                                <div class="col-6">
                                    <input type="submit" class="btn bg-blue text-white w-100" value="Login">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <div class="col-3"></div>

    </div>
