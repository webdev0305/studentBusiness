{% extends 'base.html.twig' %}

{% block title %}Professor{% endblock %}

{% block body %}


    <div class="row m-0">


        <div class="col-6 mt-5">

            <div class="card shadow ">

                <div class="card-body">
                    <div class="contenedor bg-white">

                        <div class="row m-0">

                            <div class="col-8 ">
                                <small class="small-text">Fitxa tecnica del professor</small>
                            </div>
                            {% if professor.alta == false %}
                                <div class="col-4 d-flex justify-content-end text-danger  align-items-center"> <i class="fa fa-circle" aria-hidden="true"></i> &ensp; Inactiu</div>
                            {% else %}
                                <div class="col-4 d-flex justify-content-end text-success  align-items-center"> <i class="fa fa-circle" aria-hidden="true"></i>&ensp; Actiu</div>

                            {% endif %}

                        </div>
                        <div class="row m-0 mt-3  ">

                            <div class="col-12 text-center">
                                <h4 class="bg-turqNoEmbed py-2 ">{{ professor.nom}} {{ professor.cognom }}</h4>
                            </div>


                            <div class="col-12 mt-4">

                                <form>
                                    <h6>Informació bàsica del professor</h6>
                                    <hr>
                                    <div class="form-group row m-0  mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="exampleInputEmail1">Usuari</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="inlineFormInputGroup" value="{{ professor.usuari }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row m-0 mt-4 mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="poblacio">Role</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="poblacio" value="{{ professor.role }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <h6 class="mt-5">Informació de contacte</h6>
                                    <hr>
                                    <div class="form-group row m-0  mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="exampleInputEmail1">Email</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="inlineFormInputGroup" value="{{ professor.mail }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row m-0 mt-4 mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="exampleInputEmail1">Telefon</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="inlineFormInputGroup" value="{{ professor.telefon }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                                </form>

                            </div>

                        </div><!--Fi row fitxa tecnica-->
                    </div>



                </div><!--fi card-body1-->

            </div>


        </div><!--fi columna de fitxa tecnica-->

        <div class="col-6 mt-5">

            <div class="row m-0 h-100">

                <div class="col-12 p-0 ">

                    <div class="card shadow h-100">

                        <div class="card-header">

                            <h5 class="m-0 titol-informacio">Accions relacionades</h5>

                        </div>

                        <div class="card-body h-100">


                            <div class="contenedor bg-white">

                                {% set contador = 0 %}

                                {% for accio in professor.accions %}
                                <div class=" row m-0">


                                    <div class="col-2 p-2 ">
                                        <div class="subcontainer">
                                            <h6 class="mb-0">{{ accio.data|date('Y-m-d') }}</h6>
                                        </div>

                                    </div>

                                    <div class="col-8 bg-white p-2 ">

                                        <div class="subcontainer">

                                            <h6 class="mb-0">{{ accio.professor.nom}} {{ accio.professor.cognom}} - {{ accio.representant.empresa.nom ?? accio.representant.nom ~ ' ' ~ accio.representant.cognom}}</h6>

                                        </div>

                                    </div>


                                    <div class="col-2 bg-white p-2">
                                        <a href="{{ path('accio_show', {'id': accio.id}) }}">
                                            <button class="btn bg-turq  w-100 h-100">
                                                <i class="fa fa-external-link" aria-hidden="true"> </i>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                                    {% set contador = contador + 1%}


                                    {% endfor  %}

                                    {% if contador == 0 %}
                                        <span>No s'ha trobat cap accio</span>
                                    {% endif %}


                            </div>

                        </div>
                    </div>




                </div>
            </div>




        </div><!--fi columna de representants relacionats-->

    </div>

    <div class="row m-0">

        <div class="col-3 mt-2  ">

            {% if professor.alta == true %}
                <div class="card shadow h-100 containerDanger">
                    <form method="post" action="{{ path('professor_alta', {'id': professor.id}) }}" onsubmit="return confirm('Estas segur que vols donar de baixa aquest professor?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ professor.id) }}">
                        <button class="common-link text-danger btn w-100" type="submit" href="">
                            <div class="card-body">
                                <div class="contenedor">

                                    <div class="h-100">

                                        <div class="d-flex justify-content-center align-items-center containerDanger"><i class="fa fa-trash" aria-hidden="true"></i>
                                            &ensp; Donar baixa</div>

                                    </div>
                                </div>

                            </div><!--fi card-body1-->
                        </button>
                    </form>
                </div>
            {% else %}
                <div class="card shadow h-100 containerBlue">
                    <form method="post" action="{{ path('professor_alta', {'id': professor.id}) }}" onsubmit="return confirm('Estas segur que vols donar de alta aquest professor?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ professor.id) }}">
                        <button class="common-link color-heavyBlue btn w-100" type="submit" href="">
                            <div class="card-body">
                                <div class="contenedor">

                                    <div class="h-100">

                                        <div class="d-flex justify-content-center align-items-center containerBlue"><i class="fa fa-globe" aria-hidden="true"></i>
                                            &ensp; Donar alta</div>

                                    </div>
                                </div>

                            </div><!--fi card-body1-->
                        </button>
                    </form>
                </div>

            {% endif %}


        </div>

        <div class="col-3 mt-2 ">

            <div class="card shadow h-100 containerBlue ">
                <form method="get" action="{{ path('professor_edit', {'id': professor.id}) }}">
                    <button class="common-link color-heavyBlue btn w-100" type="submit" >
                        <div class="card-body">
                            <div class="contenedor">

                                <div class="h-100">

                                    <div class="d-flex justify-content-center align-items-center"><i class="fa fa-pencil" aria-hidden="true"></i>

                                        &ensp; Editar</div>

                                </div>
                            </div>

                        </div><!--fi card-body1-->
                    </button>
                </form>

            </div>
        </div>
        <div class="col-6 mt-2">
            <div class="card shadow h-100 containerBlue">

                <form method="get" action="{{ path('professor_edit', {'id': professor.id}) }}">
                    <button class="common-link color-heavyBlue btn w-100" type="submit" >
                        <div class="card-body">
                            <div class="contenedor">

                                <div class="h-100">

                                    <div class="d-flex justify-content-center align-items-center">
                                        Totes les accions relacionades &ensp; <i class="fa fa-arrow-right" aria-hidden="true"></i></div>

                                </div>
                            </div>

                        </div><!--fi card-body1-->
                    </button>
                </form>
            </div>


        </div>
    </div>
