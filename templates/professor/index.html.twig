{% extends 'base.html.twig' %}

{% block title %}Professor{% endblock %}

{% block body %}

    <div class="row m-0 mt-5 ">

        <div class=" col-sm-2 col-md-2 col-lg-2 mt-3">

            <h3>Professors</h3>
        </div>
        <div class="d-none d-sm-block col-sm-4 col-md-5 col-lg-5 mt-3">
            <form class="d-flex" method="get" action="{{ path('professor_filter' ) }}">

                <div class="input-group">
                    <input type="text" name="text" class="form-control rounded shadow-none" placeholder="Cercar professor" aria-label="Search"
                           aria-describedby="search-addon" />
                    <button type="submit" class="btn bg-turq shadow-none"><i class="fa fa-search text-light" aria-hidden="true"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="d-none d-sm-block col-sm-3 col-md-3 col-lg-1 mt-3">
            <nav aria-label="">
                <ul class="pagination m-0">
                    <li class="page-item disabled">
                        <a class="page-link shadow-none" href="#" tabindex="-1" aria-disabled="true"><i class="fas fa-angle-left"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link color-heavyBlue shadow-none" href="#"><i class="fas fa-angle-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="d-none d-sm-block col-sm-3 col-md-3 col-lg-3 mt-3">
        </div>
        <div class="col-sm-3 col-md-2 col-lg-1 mt-3">

            <a href="{{ path('professor_new') }}" class="addNewlink">
                <div class="addNew">

                    <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
            </a>

        </div>

    </div>
    <div class="row m-0 mt-2">
        <hr class="w-100">
    </div>

    <div class="row m-0 mt-3"> <!-- row empreses-->
    {% for professor in professors %}
        <div class="col-sm-12 col-md-6 col-lg-6 py-3 "> <!-- primer col 6-->

            <div class="card shadow ">
                <div class="card-body">
                    <div class="contenedor bg-white">
                        <div class="row m-0">
                            <div class="d-none d-md-block col-sm-2 col-md-2 col-lg-2 p-2 "><!--Contenedor foto-->
                                <div class="icon-photo">
                                    <i class="fas fa-book"></i>
                                </div>
                            </div>
                            {% if professor.alta == false %}

                                <div class="col-8 p-2"> <!--Contenedor text-->
                                    <div class="d-flex">
                                        <h5>{{ professor.nom }} {{ professor.cognom }} &ensp;</h5> <span><div class="text-danger"><i class="fa fa-circle" aria-hidden="true"></i> Inactiu </div></span>
                                    </div>
                                    <span> {{ professor.telefon }} - {{ professor.mail  }}</span>
                                </div>

                            {% else %}
                                <div class="col-8 p-2"> <!--Contenedor text-->

                                    <div class="d-flex">
                                        <h5>{{ professor.nom }} {{ professor.cognom  }}&ensp; </h5><span class="text-success"><i class="fa fa-circle" aria-hidden="true"></i> Actiu </span>
                                    </div>
                                    <span> {{ professor.telefon }} - {{ professor.mail  }}</span>
                                </div>

                            {% endif %}


                            <div class="col-2 link-button "> <a href="{{ path('professor_show', {'id': professor.id}) }}"><button class="btn bg-turq shadow-none "><i class="fa fa-external-link shadow-none" aria-hidden="true"></i>
                                    </button></a></div><!--Contenedor link-->



                        </div>
                    </div>

                </div><!--fi card-body1-->
            </div>

        </div> <!-- fi primer col 6 -->
        {#        {% endif %}#}
    {% else %}
        </div>
        <div class="row m-0">

            <div class="col-12 py-3">

                <h5>No s'han trobat registres de professors. <a href="{{ path('professor_new') }}">Crear professor</a></h5>
            </div>

        </div>

    {% endfor %}

{% endblock %}
