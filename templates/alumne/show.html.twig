{% extends 'base.html.twig' %}

{% block title %}Alumne{% endblock %}

{% block body %}
    <div class="row m-0">


        <div class="col-6 mt-5">

            <div class="card shadow ">

                <div class="card-body">
                    <div class="contenedor bg-white">

                        <div class="row m-0">

                            <div class="col-8 ">
                                <small class="small-text">Fitxa tecnica de l'alumne</small>
                            </div>
                            {% if alumne.alta == false %}
                                <div class="col-4 d-flex justify-content-end text-danger  align-items-center"> <i class="fa fa-circle" aria-hidden="true"></i> &ensp; Inactiu</div>
                            {% else %}
                                <div class="col-4 d-flex justify-content-end text-success  align-items-center"> <i class="fa fa-circle" aria-hidden="true"></i>&ensp; Actiu</div>

                            {% endif %}

                        </div>
                        <div class="row m-0 mt-3  ">

                            <div class="col-12 text-center">
                                <h4 class="bg-turqNoEmbed py-2 ">{{ alumne.nom}} {{ alumne.cognom }}</h4>
                            </div>


                            <div class="col-12 mt-4">

                                <form>
                                    <h6>Informació bàsica de l'alumne</h6>
                                    <hr>
                                    <div class="form-group row m-0 mt-4 mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="poblacio">Professor</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="poblacio" value="{{ alumne.professor.nom }} {{ alumne.professor.cognom }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <a href="{{ path('professor_show', {'id': alumne.professor.id}) }}"><i class="fas fa-arrow-right"></i></a>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row m-0 mt-4 mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="poblacio">Adreça</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="poblacio" value="{{ alumne.direccio }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row m-0  mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="exampleInputEmail1">Observ</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">
                                                <textarea class="form-control" readonly id="exampleFormControlTextarea1" rows="3">{{ alumne.observacions }}</textarea>

                                            </div>
                                        </div>
                                    </div>

                                    <h6 class="mt-5">Informació de contacte</h6>
                                    <hr>

                                    <div class="form-group row m-0 mt-4 mb-3">

                                        <label class="col-sm-2 col-form-label bg-secondary text-white rounded-start" for="exampleInputEmail1">Telefon</label>
                                        <div class="col-10 p-0">
                                            <div class="input-group">

                                                <input type="text" readonly class="form-control shadow-none" id="inlineFormInputGroup" value="{{ alumne.telefon }}">
                                                <div class="input-group-prepend ">
                                                    <div class="input-group-text bg-light h-100">

                                                        <i class="fa fa-clone" aria-hidden="true"></i>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                                </form>

                            </div>

                        </div><!--Fi row fitxa tecnica-->
                    </div>



                </div><!--fi card-body1-->

            </div>


        </div><!--fi columna de fitxa tecnica-->

        <div class="col-6 mt-5">

            <div class="row m-0 h-100 ">

                <div class="col-12 p-0 mb-4 ">

                    <div class="card shadow h-100">

                        <div class="card-header">

                            <h5 class="m-0 titol-informacio">Cicles</h5>

                        </div>

                        <div class="card-body h-100">


                            <div class="contenedor bg-white">

                                <div class="row m-0 h-50">


                                    <div class="col-12 p-0">
                                        <!--TODO: Fer que nomes es puguen traure 4 representants -->
                                        {% for cicle in alumne.cicle %}
                                            <div class="row m-0">
                                                <div class="col-10 bg-white p-2 ">

                                                    <div class="subcontainer">

                                                        <h6 class="mb-0">{{ cicle.nom}}</h6>
                                                    </div>
                                                </div>
                                                <div class="col-2 bg-white p-2"> <a href="{{ path('cicle_show', {'id': cicle.id}) }}" class="btn bg-turq  w-100 h-100"><i class=" fas fa-bookmark"></i>
                                                    </a></div>
                                            </div>
                                        {% endfor %}

                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-12 p-0 ">

                    <div class="card shadow h-100">

                        <div class="card-header">

                            <h5 class="m-0 titol-informacio">Practiques</h5>

                        </div>

                        <div class="card-body h-100">


                            <div class="contenedor bg-white">


                                {% set contador = 0 %}

                                    {% for practica in alumne.practiques %}
                                        <div class=" row m-0 mt-2">

                                            <div class="col-12 p-0">
                                                <div class="input-group">


                                                    <input type="text" readonly class="form-control shadow-none" id="inlineFormInputGroup" value="{{ practica.alumne.nom}} {{ practica.alumne.cognom }} - {{ practica.empresa.nom }}">
                                                    <div class="input-group-prepend ">
                                                        <div class="input-group-text bg-light h-100">

                                                            <a href="{{ path('practica_show', {'id': practica.id}) }}"><i class="fas fa-arrow-right"></i></a>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        {% set contador = contador + 1%}


                                    {% endfor  %}

                                {% if contador == 0 %}
                                    <span>No s'ha trobat cap practica</span>
                                {% endif %}


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div><!--fi columna de representants relacionats-->

    </div>

    <div class="row m-0 mb-5">

        <div class="col-3 mt-2  ">

            {% if alumne.alta == true %}
                <div class="card shadow h-100 containerDanger">
                    <form method="post" action="{{ path('alumne_alta', {'id': alumne.id}) }}" onsubmit="return confirm('Estas segur que vols donar de baixa aquest alumne?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alumne.id) }}">
                        <button class="common-link text-danger btn w-100" type="submit" href="">
                            <div class="card-body">
                                <div class="contenedor">

                                    <div class="h-100">

                                        <div class="d-flex justify-content-center align-items-center containerDanger"><i class="fa fa-trash" aria-hidden="true"></i>
                                            &ensp; Donar baixa</div>

                                    </div>
                                </div>

                            </div><!--fi card-body1-->
                        </button>
                    </form>
                </div>
            {% else %}
                <div class="card shadow h-100 containerBlue">
                    <form method="post" action="{{ path('alumne_alta', {'id': alumne.id}) }}" onsubmit="return confirm('Estas segur que vols donar de alta aquest alumne?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alumne.id) }}">
                        <button class="common-link color-heavyBlue btn w-100" type="submit" href="">
                            <div class="card-body">
                                <div class="contenedor">

                                    <div class="h-100">

                                        <div class="d-flex justify-content-center align-items-center containerBlue"><i class="fa fa-globe" aria-hidden="true"></i>
                                            &ensp; Donar alta</div>

                                    </div>
                                </div>

                            </div><!--fi card-body1-->
                        </button>
                    </form>
                </div>

            {% endif %}


        </div>

        <div class="col-3 mt-2 ">

            <div class="card shadow h-100 containerBlue ">
                <form method="get" action="{{ path('alumne_edit', {'id': alumne.id}) }}">
                    <button class="common-link color-heavyBlue btn w-100" type="submit" >
                        <div class="card-body">
                            <div class="contenedor">

                                <div class="h-100">

                                    <div class="d-flex justify-content-center align-items-center"><i class="fa fa-pencil" aria-hidden="true"></i>

                                        &ensp; Editar</div>

                                </div>
                            </div>

                        </div><!--fi card-body1-->
                    </button>
                </form>

            </div>
        </div>
        <div class="col-6 mt-2">
            <div class="card shadow h-100 containerBlue">

                <form method="get" action="{{ path('alumne_edit', {'id': alumne.id}) }}">
                    <button class="common-link color-heavyBlue btn w-100" type="submit" >
                        <div class="card-body">
                            <div class="contenedor">

                                <div class="h-100">

                                    <div class="d-flex justify-content-center align-items-center">
                                        Totes les accions relacionades &ensp; <i class="fa fa-arrow-right" aria-hidden="true"></i></div>

                                </div>
                            </div>

                        </div><!--fi card-body1-->
                    </button>
                </form>
            </div>


        </div>


    </div>

{% endblock %}
