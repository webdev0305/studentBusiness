{% extends 'base.html.twig' %}

{% block title %}Cicles{% endblock %}

{% block body %}


    <div class="row m-0 mt-5">

        <div class="col-2 mt-3">

            <h3>Cicles</h3>
        </div>
        <div class="col-3 p-0 mt-3">
            <nav aria-label="">
                <ul class="pagination m-0">
                    <li class="page-item disabled">
                        <a class="page-link shadow-none" href="#" tabindex="-1" aria-disabled="true"><i class="fas fa-angle-left"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link color-heavyBlue shadow-none" href="#"><i class="fas fa-angle-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>


        <div class="col-6 p-0 mt-3"></div>
        <div class="col-1 mt-3">

            <a href="{{ path('cicle_new') }}" class="addNewlink">
                <div class="addNew">

                    <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
            </a>

        </div>

    </div>
    <div class="row m-0 mt-2">
        <hr class="w-100">
    </div>

    <div class="row m-0 mt-3">

        {% for cicle in cicles %}
            <div class="col-sm-12 col-md-12 col-lg-6 py-3 "> <!-- primer col 6-->

                <div class="card shadow ">


                    <div class="card-body">
                        <div class="contenedor bg-white">

                            <div class="row m-0">

                                <div class="d-none d-md-block col-sm-2 col-md-2 col-lg-2 p-2 "><!--Contenedor foto-->

                                    <div class="icon-photo">

                                        <i class="fas fa-bookmark" aria-hidden="true"></i>
                                    </div>


                                </div>

                                    <div class="col-8 p-2"> <!--Contenedor text-->

                                        <div class="d-flex">
                                            <h6>{{ cicle.nom }}</h6>
                                        </div>

                                    </div>




                                <div class="col-2 link-button "> <a href="{{ path('cicle_show', {'id': cicle.id}) }}"><button class="btn bg-turq shadow-none "><i class="fa fa-external-link shadow-none" aria-hidden="true"></i>
                                        </button></a></div><!--Contenedor link-->



                            </div>
                        </div>

                    </div><!--fi card-body1-->
                </div>

            </div> <!-- fi primer col 6 -->

        {% else %}
            <div class="col-12 py-3"><h3>No s'han trobat cicles...</h3></div>
        {% endfor %}

    </div>


    {#<a href="{{ path('cicle_edit', {'id': cicle.id}) }}">edit</a>#}

{% endblock %}
