{% extends 'base.html.twig' %}

{% block title %}FCT!{% endblock %}

{% block body %}


    <div class="row m-0">

        <div class="col-sm-12 col-md-12 col-lg-3 mt-5">

            <h3>Benvingut a FCT</h3>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-9 mt-5">

            <nav aria-label="">
                <ul class="pagination m-0">
                    <li class="page-item disabled">
                        <a class="page-link shadow-none" href="#" tabindex="-1" aria-disabled="true"><i class="fas fa-angle-left"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link color-heavyBlue shadow-none" href="#"><i class="fas fa-angle-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row m-0 mt-2">

        <div class="col-sm-12 col-md-12 col-lg-12 ">

            <div class="card shadow ">

                <div class="card-header">
                    <h5 class="m-0 titol-informacio">Registre d'accions recents</h5>
                </div>


                <div class="card-body">

                    <div class="row m-0">

                        <div class="col-sm-12 col-md-12 col-lg-6 p-0">
                            <div class="contenedor bg-white">

                                {% if app.user %}
                                    {% set contador = 0 %}
                                    {% for accio in accions %}
                                        <div class=" row m-0">


                                            <div class="col-2 p-2 ">
                                                <div class="subcontainer">
                                                    <h6 class="mb-0">{{ accio.data|date('Y-m-d') }}</h6>
                                                </div>

                                            </div>

                                            <div class="col-8 bg-white p-2 ">

                                                <div class="subcontainer">

                                                    <h6 class="mb-0">{{ accio.professor.nom}} {{ accio.professor.cognom}} - {{ accio.representant.empresa.nom}}</h6>

                                                </div>

                                            </div>


                                            <div class="col-2 bg-white p-2">
                                                <a href="{{ path('accio_show', {'id': accio.id}) }}">
                                                    <button class="btn bg-turq  w-100 h-100">
                                                        <i class="fa fa-external-link" aria-hidden="true"> </i>
                                                    </button>
                                                </a>
                                            </div>
                                            {% set contador = contador + 1%}

                                        </div>
                                    {% endfor  %}

                                    {% if contador == 0 %}
                                        <span>No s'ha trobat cap accio</span>
                                    {% endif %}

                                {% else %}
                                <div class="row m-0">

                                    <div class="col-sm-12 col-md-12 col-lg-12 p-3">

                                        <p>Inicia sessio per poder gaudir dels avantatges de Soft Launch</p>

                                    </div>
                                </div>



                                {% endif %}



                            </div>


                        </div><!--fi 1 columna-->
                        <div class="col-sm-12 col-md-12 col-lg-6 p-0">
                            <div class="contenedor bg-white">

                            </div>



                        </div><!--fi 2 columna-->
                    </div><!--row per a separar en dos les columnes-->
                </div>
            </div>




        </div>
